<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampeonInfoTienda">


    <ImageView
        android:id="@+id/ivFotoCol"
        android:layout_width="218dp"
        android:layout_height="213dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPosCol"
        app:layout_constraintVertical_bias="0.068"
        app:srcCompat="@drawable/ahri" />

    <TextView
        android:id="@+id/tvDesCol"
        android:layout_width="374dp"
        android:layout_height="251dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:maxLines="6"
        android:text="DescripciÃ³n"
        android:theme="@style/estiloTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvNombreCol"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombreCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:gravity="center"
        android:textSize="34sp"
        android:theme="@style/estiloTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonatrasCol"
        android:layout_width="94dp"
        android:layout_height="52dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/estiloBotonMorado"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/ivFotoCol"
        app:layout_constraintTop_toBottomOf="@+id/tvDesCol"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvPosCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Posicion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreCol" />
</androidx.constraintlayout.widget.ConstraintLayout>